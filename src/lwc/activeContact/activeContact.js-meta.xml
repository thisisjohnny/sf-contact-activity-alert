<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Active Contact Notification</masterLabel>
    <description>Provides and alert to the user if the contact record days since last activity is beyond 30 days</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property label="Days Since Last Activity" name="threshold" type="Integer"></property>
            <property label="Banner Message" name="message" type="String"></property>
            <property label="Icon Name" name="iconName" type="String"></property>
            <objects>
                <object>Contact</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>